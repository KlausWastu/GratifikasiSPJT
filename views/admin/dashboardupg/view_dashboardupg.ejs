<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <%- include ../../partials/message.ejs%>
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Halaman Utama</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item active">Halaman Utama</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card-header">
            <h3 class="card-title">Riwayat Pelaporan</h3>
          </div>
        </div>
        <input
          type="hidden"
          id="masukPenerimaan"
          value="<%= laporanMasukPenerimaan %>"
        />
        <input
          type="hidden"
          id="masukPenolakan"
          value="<%= laporanMasukPenolakan %>"
        />
        <input
          type="hidden"
          id="masukPermintaan"
          value="<%= laporanMasukPermintaan %>"
        />
        <div class="col-lg-4 col-6">
          <!-- small box -->
          <div class="small-box bg-success">
            <div class="inner">
              <h3><%= count.penerimaan %></h3>

              <p>Laporan Penerimaan</p>
            </div>
            <a href="/riwayatPenerimaan" class="small-box-footer"
              >More info <i class="fas fa-arrow-circle-right"></i
            ></a>
          </div>
        </div>
        <div class="col-lg-4 col-6">
          <!-- small box -->
          <div class="small-box bg-danger">
            <div class="inner">
              <h3><%= count.penolakan %></h3>

              <p>Laporan Penolakan</p>
            </div>
            <a href="/riwayatPenolakan" class="small-box-footer"
              >More info <i class="fas fa-arrow-circle-right"></i
            ></a>
          </div>
        </div>
        <div class="col-lg-4 col-6">
          <!-- small box -->
          <div class="small-box bg-info">
            <div class="inner">
              <h3><%= count.permintaan %></h3>

              <p>Laporan Permintaan</p>
            </div>
            <a href="/riwayatPermintaan" class="small-box-footer"
              >More info <i class="fas fa-arrow-circle-right"></i
            ></a>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6 col-md-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Laporan Reviewed Gratifikasi PT. SPJT</h3>

              <div class="card-tools">
                <button
                  type="button"
                  class="btn btn-tool"
                  data-card-widget="collapse"
                >
                  <i class="fas fa-minus"></i>
                </button>
                <button
                  type="button"
                  class="btn btn-tool"
                  data-card-widget="remove"
                >
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div
                  class="col-12"
                  style="
                    display: flex;
                    justify-content: center;
                    align-items: center;
                  "
                >
                  <div class="chart-responsive">
                    <canvas
                      id="chart"
                      style="position: relative; width: 100%; max-width: 600px"
                    ></canvas>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-md-12">
          <div class="card">
            <div class="card-header border-transparent">
              <h3 class="card-title">Laporan Masuk</h3>
              <div class="card-tools">
                <button
                  type="button"
                  class="btn btn-tool"
                  data-card-widget="collapse"
                >
                  <i class="fas fa-minus"></i>
                </button>
                <button
                  type="button"
                  class="btn btn-tool"
                  data-card-widget="remove"
                >
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th style="width: 10px">No</th>
                      <th>Tanggal Lapor</th>
                      <th>Nama Pelapor</th>
                      <th>Kategori Laporan</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i=0; i < laporanMasuk.length && i <= 10 ; i++)
                    {%>
                    <tr>
                      <td><%= i+1 %></td>
                      <% if(laporanMasuk[i].uraianPenerimaan){%>
                      <td><%= laporanMasuk[i].uraianPenerimaan.waktu %></td>
                      <%} else if(laporanMasuk[i].uraianPenolakan) {%>
                      <td><%= laporanMasuk[i].uraianPenolakan.waktu %></td>
                      <%} else if(laporanMasuk[i].uraianPermintaan) {%>
                      <td><%= laporanMasuk[i].uraianPermintaan.waktu %></td>
                      <%} %>
                      <td><%= laporanMasuk[i].dataPenerima.namaPelapor%></td>
                      <% if(laporanMasuk[i].uraianPenerimaan){%>
                      <td>Penerimaan Gratifikasi</td>
                      <%} else if(laporanMasuk[i].uraianPenolakan) {%>
                      <td>Penolakan Gratifikasi</td>
                      <%} else if(laporanMasuk[i].uraianPermintaan) {%>
                      <td>Permintaan Gratifikasi</td>
                      <%} %>
                    </tr>
                    <%}%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>
</div>
<script>
  const isiPenerimaan = document.getElementById("masukPenerimaan").value;
  const isiPenolakan = document.getElementById("masukPenolakan").value;
  const isiPermintaan = document.getElementById("masukPermintaan").value;

  var labels = ["Penerimaan", "Penolakan", "Permintaan"];
  var values = [isiPenerimaan, isiPenolakan, isiPermintaan];
  var ultimateColors = ["#28a745", "#ff0e0e", "#17a2b8"];

  new Chart("chart", {
    type: "pie",
    data: {
      datasets: [
        {
          backgroundColor: ultimateColors,
          data: values,
        },
      ],
      labels: labels,
    },
  });
</script>
<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
