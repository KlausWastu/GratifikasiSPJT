<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <%- include ../../partials/message.ejs%>
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Halaman Utama</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item active">Halaman Utama</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>

  <section class="content">
    <div class="container-fluid">
      <!-- Small boxes (Stat box) -->
      <div class="row">
        <div class="col-12">
          <div class="card-header">
            <h3 class="card-title">Riwayat Pelaporan</h3>
          </div>
        </div>
        <div class="col-lg-4 col-6">
          <!-- small box -->
          <div class="small-box bg-success">
            <div class="inner">
              <h3><%= count.penerimaan %></h3>

              <p>Laporan Penerimaan</p>
            </div>
            <a href="/riwayatPenerimaan" class="small-box-footer"
              >More info <i class="fas fa-arrow-circle-right"></i
            ></a>
          </div>
        </div>
        <div class="col-lg-4 col-6">
          <!-- small box -->
          <div class="small-box bg-danger">
            <div class="inner">
              <h3><%= count.penolakan %></h3>

              <p>Laporan Penolakan</p>
            </div>
            <a href="/riwayatPenolakan" class="small-box-footer"
              >More info <i class="fas fa-arrow-circle-right"></i
            ></a>
          </div>
        </div>
        <div class="col-lg-4 col-6">
          <!-- small box -->
          <div class="small-box bg-info">
            <div class="inner">
              <h3><%= count.permintaan %></h3>

              <p>Laporan Permintaan</p>
            </div>
            <a href="/riwayatPermintaan" class="small-box-footer"
              >More info <i class="fas fa-arrow-circle-right"></i
            ></a>
          </div>
        </div>
        <!-- ./col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
</div>
<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
