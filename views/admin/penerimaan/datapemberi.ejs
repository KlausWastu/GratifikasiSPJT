<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Laporan Penerimaan</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Halaman Utama</a></li>
            <li class="breadcrumb-item">
              <a href="/lapor">Lapor</a>
            </li>
            <li class="breadcrumb-item active">Form Pelaporan</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Penerimaan Laporan Gratifikasi</h3>
            </div>
            <div class="step-wrapper">
              <div class="stepper-item completed">
                <div class="step">1</div>
                <div class="step-name">Identitas Penerima</div>
              </div>
              <div class="stepper-item active">
                <div class="step">2</div>
                <div class="step-name">Identitas Pemberi</div>
              </div>
              <div class="stepper-item">
                <div class="step">3</div>
                <div class="step-name">Uraian Penerimaan</div>
              </div>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/laporPenerimaan/datapemberi" method="POST">
              <div class="card-body">
                <div class="row">
                  <div class="col-12 col-md-6">
                    <div class="form-group">
                      <label for="namaPemberi">Nama Pemberi </label>
                      <input
                        type="text"
                        name="namaPemberi"
                        class="form-control"
                        id="namaPemberi"
                        placeholder="Masukan Nama"
                      />
                    </div>
                  </div>
                  <div class="col-12 col-md-6">
                    <div class="form-group">
                      <label for="hubungan">Hubungan Dengan Penerima </label>
                      <input
                        type="text"
                        name="hubungan"
                        class="form-control"
                        id="hubungan"
                        placeholder="Hubungan Dengan Penerima"
                      />
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12 col-md-6">
                    <div class="form-group">
                      <label for="jabatan">Jabatan</label>
                      <input
                        type="text"
                        name="jabatan"
                        class="form-control"
                        id="jabatan"
                        placeholder="Masukan Jabatan"
                      />
                    </div>
                  </div>
                  <div class="col-12 col-md-6">
                    <div class="form-group">
                      <label for="noHp">No. HP/Email </label>
                      <div class="row">
                        <div class="col-12 col-md-6 noHp">
                          <input
                            type="text"
                            name="noHp"
                            class="form-control"
                            id="noHp"
                            placeholder="Masukan Nomor HP"
                          />
                        </div>
                        <div class="col-12 col-md-6 email">
                          <input
                            type="text"
                            name="email"
                            class="form-control"
                            id="email"
                            placeholder="Masukan Email"
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12 col-md-6">
                    <div class="form-group">
                      <label for="alamat">Alamat</label>
                      <input
                        type="text"
                        name="alamat"
                        class="form-control"
                        id="alamat"
                        placeholder="Masukan Alamat"
                      />
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-footer d-flex justify-content-end">
                <a
                  href="/laporPenerimaan"
                  class="btn btn-secondary"
                  style="margin-right: 5px"
                  >Kembali</a
                >
                <a
                  href="/laporPenerimaan/uraianpenerimaan"
                  class="btn btn-primary"
                  id="next"
                  >Berikutnya</a
                >
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<script>
  document.getElementById("next").onclick = function (e) {
    if (
      namaPemberi.value !== "" &&
      hubungan.value !== "" &&
      jabatan.value !== "" &&
      noHp.value !== "" &&
      email.value !== "" &&
      alamat.value !== ""
    ) {
      localStorage.setItem("namaPemberi", namaPemberi.value);
      localStorage.setItem("hubungan", hubungan.value);
      localStorage.setItem("jabatanPemberi", jabatan.value);
      localStorage.setItem("noHpPemberi", noHp.value);
      localStorage.setItem("emailPemberi", email.value);
      localStorage.setItem("alamat", alamat.value);
    } else {
      alert("Mohon lengkapi semua input dalam form tersebut");
      e.preventDefault();
    }
  };
</script>
